try:
    num = int(input("Please enter a natural number: "))
    def fibonacci(num):
        if num == 1:
            return 0
        elif num == 2:
            return 1
        else:
            return fibonacci(num-1) + fibonacci(num-2)
except ValueError:
    print("It is not a valid value.")

print("The Fibonacci number is", fibonacci(num), ".")
