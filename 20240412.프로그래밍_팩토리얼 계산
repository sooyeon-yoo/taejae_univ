num_for = int(input("Please enter a natural number to calculate the factorial: "))
factorial_for = 1
for num in range(1, num_for+1):
    factorial_for = factorial_for * num
print("The factorial calculated by the code, for is", factorial_for)


num_while = int(input("Please enter a natural number to calculate the factorial: "))
num_calculate = 1
factorial_while = 1
while num_while > num_calculate:
    num_calculate += 1
    factorial_while = factorial_while * num_calculate
print("The factorial calculated by the code, while is", factorial_while)
